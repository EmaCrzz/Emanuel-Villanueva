@import './scroll-bar.styl'
@import './hero.styl'
@import './header.styl'
@import './about.styl'
@import './projects.styl'
@import './footer.styl'
@import './skills.styl'

:root
  --softBlue: hsl(231, 69%, 60%)
  --softRed: hsl(0, 94%, 66%)
  --grayishBlue: hsl(229, 8%, 60%)
  --veryDarkBlue: hsl(229, 31%, 21%)

html
  scroll-behavior smooth

body
  background lightcyan
  font-family 'Montserrat', sans-serif
  color var(--veryDarkBlue)
  margin 0
  font-size 18px
code
  letter-spacing 1px
  font-family 'Montserrat', sans-serif
.u-wrapper
  max-width 1280px
  margin auto
  padding 0 1em

.u-h1
  font-size 2em
  font-weight 500
.u-h2
  @extends .u-h1
  font-size 1.5em
.u-h4
  @extends .u-h1
  font-size 1.3em
  margin-top .5em

.u-p
  color var(--grayishBlue)
  line-height: 1.8
  font-size .9em

.u-button
  background var(--softBlue)
  color white
  padding 1em 1em
  font-size .9em
  font-weight: 500
  border-radius: .5em
  margin-left .5em
  border none
  cursor pointer
  -webkit-appearance: none
  box-shadow 0 5px 10px -5px var(--softBlue)
  &:first-of-type
    margin 0
  &.is-red
    color white
    background var(--softRed)
  &.is-gray
    color var(--veryDarkBlue)
    background #f7f7f7
  &.is-fullWidth
    width 100%