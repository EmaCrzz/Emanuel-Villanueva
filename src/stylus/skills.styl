.skills
  text-align center
  padding 1em 0
  &-slider
    height: 100px
    margin: auto
    overflow:hidden
    position: relative
    &::before,
    &::after
      background: linear-gradient(to right,  lightcyan 0%, rgba(224, 253, 254, 0) 100%)
      content: ""
      height: 100px
      position: absolute
      width: 200px
      z-index: 2
    @media screen and (max-width: 600px)
      &::before,
      &::after
        background: linear-gradient(to right,  lightcyan 0%, rgba(224, 253, 254, 0) 40%)
    &::after
      right: 0
      top: 0
      transform: rotateZ(180deg)
    &::before
      left: 0
      top: 0
  &-track
    animation: scroll 40s linear infinite
    display: flex
    width: calc(180px * 28);
  
  &-slide
    height: 100px
    width: 180px
    img
      height: 100px
      width: 180px
  
  @keyframes scroll {
    0% { 
      transform: translateX(0)
    }
    100% { 
      transform: translateX(calc(-180px * 14))
    }
  }
